.canvas-view{
  height: 100%;
  display: flex;
  align-items: center;
  margin-top: 48rpx;
}
.canvas{
  width: 100%;
  height: 640rpx;
}
/* 下栏 */
.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}
.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}
.detail-nav {
  display: flex;
