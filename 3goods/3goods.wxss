page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
/* 直接设置swiper属性 */
swiper {
  height: 500rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}
.detail {
  background-color: #fff;
  box-shadow: 5px 5px 5px #888888;
  border-style:solid;
  border-width:1px;
  border-radius: 25px;
border-color:#c0bdbd;
padding:10px;
margin-left: 10px;
margin-right: 10px;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.title {
  font-size: 35rpx;
  color: black;
  text-align: justify;
  font-weight: 700;
}
.price {
  color: red;
  font-size: 40rpx;
  font-weight: 600;
}
